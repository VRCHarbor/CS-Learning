<Window x:Class="MyWindowApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWindowApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF5E7A75">

    <Grid Margin="0,0,20,20">

        <Canvas x:Name="MainCanvas" Margin="10,10,-10,-10" StylusDown="Bruh" MouseDown="Canvas_MouseDown_1" MouseMove="Canvas_MouseMove_1" >
            <Canvas.Background>
                <SolidColorBrush Color="AliceBlue" Opacity="1"/>
            </Canvas.Background>
        </Canvas>
        <Button x:Name="ClearButton" Margin="10,10,0,0" FontFamily="Yu Gothic UI" Click="Clear" ClickMode="Press" Content="BRUH" Background="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="135"/>
    </Grid>

</Window>
